<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.kecamatan.controller.DesaController"
            stylesheets="@../style/style.css" styleClass="dashboard-container">
    
    <left>
        <VBox spacing="10" styleClass="sidebar">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Text text="MENU" styleClass="sidebar-title"/>
            <Button text="Dashboard" onAction="#goToDashboard" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button fx:id="btnKecamatan" text="Data Kecamatan" onAction="#goToKecamatan" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button fx:id="btnDesa" text="Data Desa" maxWidth="Infinity" styleClass="sidebar-button-active"/>
            <Button fx:id="btnWarga" text="Data Warga" onAction="#goToWarga" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button fx:id="btnLaporan" text="Laporan" onAction="#goToLaporan" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Profil Saya" onAction="#goToProfil" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Region VBox.vgrow="ALWAYS"/>
            <HBox spacing="10" alignment="CENTER" styleClass="user-info-pane">
                <padding>
                    <Insets bottom="10"/>
                </padding>
                <Label fx:id="userNameLabel" text="User Name" styleClass="user-name-text"/>
                <Label fx:id="userRoleLabel" text="ROLE" styleClass="role-badge-admin"/>
            </HBox>
            <Button text="Logout" onAction="#handleLogout" maxWidth="Infinity" styleClass="logout-button"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Data Desa / Kelurahan" styleClass="title-text"/>
            </HBox>

            <HBox spacing="20" VBox.vgrow="ALWAYS">
                <!-- Data Table -->
                <VBox spacing="10" HBox.hgrow="ALWAYS" styleClass="card">
                    <TableView fx:id="desaTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colKecamatan" text="Kecamatan" prefWidth="120"/>
                            <TableColumn fx:id="colNama" text="Nama Desa" prefWidth="150"/>
                            <TableColumn fx:id="colPopulasi" text="Populasi" prefWidth="100"/>
                            <TableColumn fx:id="colRT" text="RT" prefWidth="60"/>
                            <TableColumn fx:id="colRW" text="RW" prefWidth="60"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Input Form -->
                <VBox spacing="15" prefWidth="300" styleClass="card" maxHeight="Infinity">
                    <Text text="Form Data Desa" styleClass="card-title"/>
                    
                    <VBox spacing="5">
                        <Label text="Pilih Kecamatan" styleClass="input-label"/>
                        <ComboBox fx:id="kecamatanComboBox" maxWidth="Infinity" promptText="Pilih Kecamatan" styleClass="input-field"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Nama Desa" styleClass="input-label"/>
                        <TextField fx:id="namaField" styleClass="input-field"/>
                    </VBox>
                    

                    <VBox spacing="5" VBox.vgrow="ALWAYS">
                        <Label text="Daftar RW &amp; RT" styleClass="input-label"/>
                        <ScrollPane fitToWidth="true" prefHeight="200" styleClass="input-field" style="-fx-padding: 0;">
                            <VBox fx:id="rwContainer" spacing="10">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                            </VBox>
                        </ScrollPane>
                        <Button text="+ Tambah RW" onAction="#handleTambahRW" maxWidth="Infinity" styleClass="sidebar-button"/>
                    </VBox>

                    <Region VBox.vgrow="ALWAYS"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button text="Simpan" onAction="#handleSave" maxWidth="Infinity" HBox.hgrow="ALWAYS" styleClass="login-button"/>
                        <Button text="Hapus" onAction="#handleDelete" maxWidth="Infinity" HBox.hgrow="ALWAYS" styleClass="logout-button"/>
                        <Button onAction="#handleReset" styleClass="reset-icon-button" text="â†»">
                            <tooltip>
                                <Tooltip text="Reset Form"/>
                            </tooltip>
                        </Button>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
