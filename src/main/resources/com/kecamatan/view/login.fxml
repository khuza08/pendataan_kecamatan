<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.kecamatan.controller.LoginController"
      stylesheets="@../style/style.css" styleClass="login-container">
    
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <Text text="Pendataan Kecamatan" styleClass="title-text"/>
    <Text text="Masukkan Username dan Password" styleClass="subtitle-text"/>

    <VBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Username" styleClass="input-label"/>
        <TextField fx:id="usernameField" promptText="Masukkan Username" styleClass="input-field"/>
    </VBox>

    <VBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Password" styleClass="input-label"/>
        <PasswordField fx:id="passwordField" promptText="Masukkan Password" styleClass="input-field"/>
    </VBox>

    <Button text="LOGIN" onAction="#handleLogin" defaultButton="true" maxWidth="Infinity" styleClass="login-button"/>

    <Label fx:id="messageLabel" styleClass="message-label"/>

</VBox>
